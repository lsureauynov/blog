{% extends 'base.html.twig' %}

{% block title %}Edit Articles
{% endblock %}

{% block body %}
	<div class="container d-flex px-0">
		<div class="card shadow rounded-3 d-flex flex-column gap-2 w-100">
			<div class="card-header p-4 h4">
				Edit Article :
				{{article.title}}
			</div>

			<div class="card-body p-4">
				{{ include('articles/_form.html.twig', {'button_label': 'Update'}) }}
			</div>

			<div class="card-footer p-3 d-flex gap-2">
				<button class="btn btn-primary">
					<a href="{{ path('app_articles_show', {'id': article.id}) }}" class="text-decoration-none text-light">Back to article</a>
				</button>

				{{ include('articles/_delete_form.html.twig') }}
			</div>
		</div>
	</div>
{% endblock %}
