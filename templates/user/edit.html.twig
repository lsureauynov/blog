{% extends 'base.html.twig' %}

{% block title %}Edit User :
	{{ user.email }}
{% endblock %}

{% block body %}

	<div class="container d-flex justify-content-center px-0">
		<div class="card shadow rounded-3 col-lg-5 d-flex flex-column gap-2">
			<div class="card-header p-4 h4">
				Edit user :
				{{ user.email }}
			</div>

			<div class="card-body p-4">
				{{ include('user/_form.html.twig', {'button_label': 'Update'}) }}
			</div>

			<div class="card-footer d-flex gap-2 p-3">
				<button class="btn btn-primary">
					<a href="{{ path('app_user_index') }}" class="text-decoration-none text-light">Back to user</a>
				</button>

				{{ include('user/_delete_form.html.twig') }}
			</div>
		</div>
	</div>
{% endblock %}
