{% extends 'base.html.twig' %}

{% block title %}
	Create an account
{% endblock %}

{% block body %}
	<div class="container d-flex justify-content-center px-0">
		<div class="card shadow rounded-3 col-lg-5 d-flex flex-column gap-2">
			<div class="card-header p-4 h4">
				Create an account
			</div>

			<div class="card-body p-4">
				{{ form_start(registrationForm) }}

				<div class="d-flex flex-column align-items-center gap-4">
					<div class="form-group col-12">
						{{ form_label(registrationForm.email, 'Email:' ,{'label_attr': {'class': 'form-control-label'}}) }}
						{{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
					</div>

					<div class="form-group col-12">
						{{ form_label(registrationForm.plainPassword, 'Mot de passe:' ,{'label_attr': {'class': 'form-control-label'}}) }}
						{{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
					</div>

					<div class="form-group col-12">
						{{ form_widget(registrationForm.agreeTerms) }}
						{{ form_label(registrationForm.agreeTerms, "Accept the general conditions of use" ,{'label_attr': {'class': 'form-control-label'}}) }}
					</div>

					<div class="form-group col-12">
						<button type="submit" class="btn btn-dark">Create your account</button>
					</div>
				</div>

				{{ form_end(registrationForm) }}

				{{ form_errors(registrationForm) }}
			</div>

			<div class="card-footer p-3 p">
				Already have an account ?
				<a href="/login" class="card-link">Login</a>
			</div>
		</div>
	</div>
{% endblock %}
